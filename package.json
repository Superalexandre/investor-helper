{
	"name": "investor-helper",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"start": "node --loader ts-node/esm web/worker.ts",
		"deploy": "NODE_OPTIONS=--max-old-space-size=1024 && NODE_ENV=production && npm i && tsc && cd web && npm i --force && tsc -p tsconfigServer.json && npm run build && cd .. && npm run db:migration:full",
		"depcheck": "depcheck --ignores=@biomejs/biome,ts-node",
		"build:ext": "cd extension && tailwindcss -i ./styles/index.css -o ./styles/tailwind.css --minify && tsc",
		"css:ext": "cd extension && tailwindcss -i ./styles/index.css -o ./styles/tailwind.css --watch",
		"duplicate": "npx jscpd ./web -i '**/*.json' -l 20",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migration:full": "tsc -p tsconfig.json && npm run db:generate && node --no-warnings --loader ts-node/esm ./db/migrate.ts",
		"db:revert": "drizzle-kit drop",
		"create:user": "node --loader ts-node/esm ./db/createUser.ts"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@biomejs/biome": "^1.9.3",
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^11.2.1",
		"buffer": "^6.0.3",
		"chalk": "^5.4.1",
		"compress-json": "^3.1.0",
		"compressed-json": "^1.0.16",
		"depcheck": "^1.4.7",
		"drizzle-kit": "^0.30.0",
		"drizzle-orm": "^0.38.0",
		"uuid": "^11.0.0",
		"winston": "^3.17.0",
		"yargs": "^17.7.2",
		"zipson": "^0.2.12"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.11",
		"@types/react": "^18.3.5",
		"@types/uuid": "^10.0.0",
		"@types/yargs": "^17.0.33",
		"tailwindcss": "^3.4.11"
	}
}
