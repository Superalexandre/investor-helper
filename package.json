{
    "name": "investor-helper",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "start": "node --loader ts-node/esm web/worker.ts",
        "deploy": "npm i && npm run lint && tsc",
        "depcheck": "depcheck --ignores=eslint,ts-node",
        "build:ext": "cd extension && tailwindcss -i ./styles/index.css -o ./styles/tailwind.css --minify && tsc",
        "css:ext": "cd extension && tailwindcss -i ./styles/index.css -o ./styles/tailwind.css --watch",
        "duplicate": "npx jscpd ./web -i '**/*.json' -l 20",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:migration:full": "npm run db:generate && node --no-warnings --loader ts-node/esm ./db/migrate.ts",
        "db:revert": "drizzle-kit drop"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.10.0",
        "@hono/node-server": "^1.12.2",
        "@radix-ui/react-icons": "^1.3.0",
        "@remix-pwa/worker-runtime": "^2.1.4",
        "@remix-run/dev": "^2.12.0",
        "@remix-run/node": "^2.12.0",
        "@remix-run/react": "^2.12.0",
        "@stylistic/eslint-plugin": "^2.7.2",
        "@typescript-eslint/eslint-plugin": "^8.4.0",
        "@typescript-eslint/parser": "^8.4.0",
        "@vitejs/plugin-react": "^4.3.1",
        "better-sqlite3": "^11.2.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "date-fns": "^3.6.0",
        "depcheck": "^1.4.7",
        "drizzle-kit": "^0.24.2",
        "drizzle-orm": "^0.33.0",
        "eslint": "^9.10.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-no-secrets": "^1.0.2",
        "eslint-plugin-tailwindcss": "^3.17.4",
        "globals": "^15.9.0",
        "hono": "^4.5.11",
        "ical-generator": "^8.0.0",
        "isbot": "^5.1.17",
        "lucide-react": "^0.441.0",
        "node-html-parser": "^6.1.13",
        "remix": "^2.12.0",
        "remix-flat-routes": "^0.6.5",
        "remix-hono": "^0.0.16",
        "string-comparison": "^1.3.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.2",
        "vite": "^5.4.5",
        "vite-tsconfig-paths": "^5.0.1"
    },
    "devDependencies": {
        "@remix-pwa/dev": "^3.1.0",
        "@types/better-sqlite3": "^7.6.11",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "tailwindcss": "^3.4.11"
    }
}
