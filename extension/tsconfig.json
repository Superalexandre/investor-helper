{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2015"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./app/*"
            ],
            "@/types/*": [
                "./types/*"
            ],
            "@/server/*": [
                "./server/*"
            ]
        },
        "types": [
            "@types/chrome",
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}