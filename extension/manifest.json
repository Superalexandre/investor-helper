{
    "manifest_version": 3,
    "name": "Investor Helper",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }, {
            "matches": [
                "https://app.traderepublic.com/*"
            ],
            "js": [
                "traderepublic/login-traderepublic.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}